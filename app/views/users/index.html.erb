<div class="container">
  <div class="row">
    <div class="col-xs-3">
<%= render 'layouts/book_user', book: @book, user: @myuser %>
    </div>

<div class="col-xs-8 offset-1">

  <h3><i class="fas fa-users"></i> Users</h3>
<table class="table table-striped">
    <tr class="thead-dark">
  <th></th>
  <th>Name</th>
  <th>Link</th>
    </tr>
<% @users.each do |user| %>
        <tr>
  <td>
    <%= link_to user_path(user.id) do %>
    <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "img/no_image.jpg",size:'30x30' %>
    <% end %>
    </td>

  <td>
    <%= user.name %>
  </td>

  <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
<% end %>
</table>
    </div>
</div>
</div>
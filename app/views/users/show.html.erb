<div  class="alert-success" >
 <%=  notice %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
<%= render 'layouts/book_user', book: @newbook, user: @user %>
</div>

<div class="col-xs-8 offset-1">
  <% if @user.id == current_user.id %>
    <h3><i class="fas fa-book-reader"></i> My Books</h3>
  <% else %>
    <h3><i class="fas fa-book-reader"></i> <%= @user.name %>'s Books</h3>
  <% end %>
 <table class="table table-striped">
    <tr class="thead-dark">
  <th>Title</th>
  <th>Opinion</th>
    </tr>

<% @books.each do |book| %>

    <tr>
  <td>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
  </td>
  <td><%= Rinku.auto_link(book.body, :all, 'target="_blank"').html_safe %></td>
  </tr>
<% end %>
  </table>
  </div>

</div>
</div>

<div class="alert-success" >
 <%=  notice %>
</div>
<%= render "layouts/error_book", model: @book %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
<%= render 'layouts/book_user', book: @book, user: @myuser %>
    </div>

<div class="col-xs-8 offset-1">
<h4><i class="fas fa-book"></i> All Books</h4>
<table class="table table-striped">
    <tr class="thead-dark">
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
    </tr>
<% @books.each do |book| %>

    <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "img/no_image.jpg",size:'30x30' %></td>

  <td>
  <% if book.user.id == current_user.id %>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
  <% else %>
    <%= book.title %>
  <% end %>
  </td>

  <td><%= book.body %></td>
    </tr>

<% end %>
  </table>

</div>
</div>
</div>